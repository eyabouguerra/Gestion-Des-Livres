{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <h1>Liste des livres</h1>

    <div class="card mb-4">
        <div class="card-body">
            <form action="{{ path('votre_action_de_recherche') }}" method="get">
                <div class="input-group">
                    <input type="text" name="query" class="form-control" placeholder="Rechercher">
                    <button type="submit" class="btn btn-primary">Rechercher</button>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        {% for livre in livres %}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="{{ livre.image }}" class="card-img-top" alt="{{ livre.titre }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ livre.titre|capitalize }}</h5>
                        <p class="card-text">{{ livre.editeur }} - {{ livre.editedAt|date('d-m-Y') }}</p>
                        <p class="card-text">{{ livre.prix }} DT</p>
                        <a href="{{ path('admin_livres_show', {'id': livre.id}) }}" class="btn btn-primary">Voir DÃ©tails</a>
                        <a href="{{ path(app.request.attributes.get('_route'), {'id': livre.id}) }}" class="btn btn-success">Ajouter Au Panier</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
